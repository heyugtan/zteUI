<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="51dp"
        layout="@layout/act_head_with_back" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:ignore="UselessLeaf" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <!-- 用餐时间 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/meal_time"
                        android:textColor="@color/font_lable"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_confirm_meal_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/time"
                        android:textColor="@color/font_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />

                <!-- 订餐联系人 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_contact"
                        android:textColor="@color/font_lable"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textColor="@color/font_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />

                <!-- 订餐人电话 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_contact_phone"
                        android:textColor="@color/font_lable"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/phone"
                        android:textColor="@color/font_color"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />

                <!-- 人数 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/order_people"
                        android:textColor="@color/font_lable"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/number"
                        android:textColor="@color/font_color"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/divider_line" />

            <!-- 标题 订单结果 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.9"
                        android:gravity="left|center_vertical"
                        android:text="@string/order_food_name"
                        android:textColor="@color/font_lable"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="@string/order_food_price"
                        android:textColor="@color/font_lable"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="@string/order_food_number"
                        android:textColor="@color/font_lable"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/order_food_subtotal"
                        android:textColor="@color/font_lable"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />

                <ListView
                    android:id="@+id/lv_order_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null" >
                </ListView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/divider_line" />
            
            <!-- 计算总价格 -->
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/white"
                android:paddingRight="15dp"
                android:paddingLeft="12dp" >
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:text="@string/order_food_total"
                    android:gravity="center"
                    android:textColor="@color/home_theme" />
                
                <TextView
                    android:id="@+id/tv_confirm_preferentail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/preferential"
                    android:layout_alignParentRight="true"
                    android:textSize="17sp"
                    android:textColor="@color/home_theme"
                    android:gravity="center" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/markprice"
                    android:layout_toLeftOf="@+id/tv_confirm_preferentail_price"
                    android:layout_marginRight="9dp"
                    android:textSize="16sp"
                    android:textColor="@color/font_lable"
                    android:gravity="center" />
                
            </RelativeLayout>
            
            <Button 
                android:id="@+id/btn_commit_order"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:text="@string/order_food_commit"
                android:background="@drawable/selector_theme_btn"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>